
generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @default(uuid())
  nome           String
  email          String       @unique
  senha_hash     String
  tipo_usuario   String
  avaliacoes     Avaliacao[]
  items          Item[]       
  cupons         Cupom[]  
  pagamentos     Pagamento[]   
  historicoDoado Historico[]  @relation("DoadorHistorico")
  historicoRecebido Historico[] @relation("ReceptorHistorico")
}

model Avaliacao {
  id         String   @id @default(uuid())
  nota       Int
  comentario String 
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

model Historico {
  id             String   @id @default(uuid())
  item_id        String  
  receptor_id    String
  doador_id      String
  data_transacao DateTime
  tipo           String

  receptor       User     @relation("ReceptorHistorico", fields: [receptor_id], references: [id])
  doador         User     @relation("DoadorHistorico", fields: [doador_id], references: [id])
  item           Item     @relation(fields: [item_id], references: [id])
}

model Item {
  id         String      @id @default(uuid())
  titulo     String
  descricao  String
  status     String   @default("dispon√≠vel")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  historicos Historico[]
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}
model Cupom {
  id String   @id @default(uuid())
  codigo String @unique
  valor Float
  validade String
  utilizado Boolean @default(false) 
  userId     String
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Pagamento {
  id String     @id @default(uuid())
  valor         Float
  metodo        String
  status        String   @default("pendente") // status vem do front: "pendente", "concluido", etc.
  dataPagamento DateTime @default(now())

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
